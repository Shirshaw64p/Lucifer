# =============================================================================
# Lucifer — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit the real .env file to version control.
# =============================================================================

# ── Application ──────────────────────────────────────────────────────────────
APP_NAME=Lucifer
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# ── Server ───────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8080
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ── PostgreSQL ───────────────────────────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=lucifer
POSTGRES_PASSWORD=changeme_pg_password
POSTGRES_DB=lucifer

# Async connection string (built from above, but can be overridden)
DATABASE_URL=postgresql+asyncpg://lucifer:changeme_pg_password@localhost:5432/lucifer

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
REDIS_URL=redis://:changeme_redis_password@localhost:6379/0

# ── Celery ───────────────────────────────────────────────────────────────────
CELERY_BROKER_URL=redis://:changeme_redis_password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:changeme_redis_password@localhost:6379/2

# ── JWT Auth ─────────────────────────────────────────────────────────────────
JWT_SECRET_KEY=changeme_jwt_secret_min_32_chars_long!!
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ── API Key Auth ─────────────────────────────────────────────────────────────
API_KEY_HEADER=X-API-Key

# ── MinIO (S3-compatible object store) ───────────────────────────────────────
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme_minio_secret
MINIO_BUCKET=lucifer-artifacts
MINIO_USE_SSL=false

# ── ChromaDB ─────────────────────────────────────────────────────────────────
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ── Interactsh (OOB callback server) ────────────────────────────────────────
INTERACTSH_HOST=localhost
INTERACTSH_PORT=8001
